    <!-- Plugin Configuration File: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN, cannot be changed between the plugin versions. -->
    <id>dev.sandipchitale.jb-dependency-git-repo</id>

    <!-- Public plugin name should be written in Title Case.
        Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>Dependency Repository</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor
            email="sandipchitale@gmail.com"
            url="https://github.com/sandipchitale">Sandip Chitale
    </vendor>
    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
        Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
       Open Git repository at version based on dependency path.
    ]]></description>

    <!-- Product and plugin compatibility requirements.
        Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <dependencies>
        <plugin id="com.intellij.modules.platform"/>
    </dependencies>

    <change-notes><![CDATA[
        <h2>Features</h2>
        <ul>
            <li>Show Repository info for dependency.

                <p>Given a path to a .class file in Gradle dependency .jar file like this:</p>
                <pre>~/.gradle/caches/modules-2/files-2.1/com.fasterxml/classmate/1.7.0/e98374da1f2143ac8e6e0a95036994bb19137a3/classmate-1.7.0.jar!/com/fasterxml/classmate/GenericType.class</pre>
                <p>The <b>Open Repository</b> context menu action on a dependency will make a best effort to open this URL in the browser:</p>
                <a href="https://github.com/FasterXML/java-classmate/blob/classmate-1.7.0/src/main/java/com/fasterxml/classmate/GenericType.java">GenericType.java</a>
                <p><b>Note that the correct tag in the URL.</b></p>
                <p>If the heuristic fails it just shows some useful information in a dialog.</p>
                <p>It should work for a path to a .class file in Maven dependency .jar file like this as well:</p>
                <pre>~/.m2/repository/com/fasterxml/classmate/1.7.0/classmate-1.7.0.jar!/com/fasterxml/classmate/GenericType.class</pre>
            </li>

        </ul>
        <h2>Known Bugs</h2>
        <ul>
            <li>None.</li>
        </ul>
        <h2>Bug Fixes</h2>
        <ul>
            <li>None yet.</li>
        </ul>
        ]]>
    </change-notes>

    <!-- Extensions defined by the plugin.
        Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">

    </extensions>

    <actions>
        <action id="dev.sandipchitale.jbdependencygitrepo.OpenDependencyGitRepoAction"
                class="dev.sandipchitale.jbdependencygitrepo.OpenDependencyGitRepoAction"
                text="Open Repository"
                icon="AllIcons.FileTypes.Gitignore"
                description="Open Git repository at version">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>